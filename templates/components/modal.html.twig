{% block modal %}
	{% block button %}
		 <button class="btn btn-primary mb-4" data-bs-effect="effect-flip-vertical" 
		 data-bs-toggle="modal" data-bs-target="#{{id}}">{{buttonTitle}}</button> 
	{% endblock %}
		
	<div class="modal fade effect-flip-vertical" id="{{id}}" tabindex="-1" role="dialog">
        <div class="modal-dialog {{modalType}}" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title">
						{% block modalTitle %}{% endblock %}
					</h5>
					<button class="btn-close me-1" data-bs-dismiss="modal" aria-label="Close">
							<span aria-hidden="true">Ã—</span>
						</button>
				</div>
				<div class="modal-body">
					{% block form %}{% endblock %}
					{% block dashboard %}{% endblock %}
				</div>
			</div>
		</div>
	</div>
{% endblock %}