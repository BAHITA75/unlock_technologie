<div class="app-header header sticky">
	<div class="container-fluid main-container">
		<div class="d-flex">
			<a aria-label="Hide Sidebar" class="app-sidebar__toggle" data-bs-toggle="sidebar" href="#"></a>
			<div class="demo-icon nav-link icon">
									<i class="fe fe-settings fa-spin  text_primary"></i>
								</div>
			<!-- sidebar-toggle-->
			<a class="logo-horizontal" href="{{path('default')}}">
				<img src="{{asset('assets/images/brand/school.png')}}" class="header-brand-img h-20 w-20 desktop-logo"
					alt="logo">
				<img src="{{asset('assets/images/brand/school_black.png')}}" class="header-brand-img h-20 w-20 light-logo1" alt="logo">
			</a>
			<!-- LOGO -->

			<div class="d-flex order-lg-2 ms-auto header-right-icons">
				<div class="dropdown d-lg-none d-md-block d-none">
					<a href="#" class="nav-link icon" data-bs-toggle="dropdown">
						<i class="fe fe-search"></i>
					</a>
					<div class="dropdown-menu header-search dropdown-menu-start">
						<div class="input-group w-100 p-2">
							<input type="text" class="form-control" placeholder="Search....">
							<div class="input-group-text btn btn-primary">
								<i class="fe fe-search" aria-hidden="true"></i>
							</div>
						</div>
					</div>
				</div>
				<!-- SEARCH -->
				<button class="navbar-toggler navresponsive-toggler d-md-none ms-auto" type="button"
					data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent-4"
					aria-controls="navbarSupportedContent-4" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon fe fe-more-vertical"></span>
				</button>
				<div class="navbar navbar-collapse responsive-navbar p-0">
					<div class="collapse navbar-collapse" id="navbarSupportedContent-4">
						<div class="d-flex order-lg-2">
							<div class="dropdown d-md-none d-flex">
								<a href="#" class="nav-link icon" data-bs-toggle="dropdown">
									<i class="fe fe-search"></i>
								</a>
								<div class="dropdown-menu header-search dropdown-menu-start">
									<div class="input-group w-100 p-2">
										<input type="text" class="form-control" placeholder="Search....">
										<div class="input-group-text btn btn-primary">
											<i class="fa fa-search" aria-hidden="true"></i>
										</div>
									</div>
								</div>
							</div>


							<!-- SEARCH -->
							<div class="dropdown  d-flex">
								<a class="nav-link icon theme-layout nav-link-bg layout-setting">
									<span class="dark-layout">
										<i class="fe fe-moon"></i>
									</span>
									<span class="light-layout">
										<i class="fe fe-sun"></i>
									</span>
								</a>
							</div>
							<!-- Theme-Layout -->
							<div class="dropdown d-flex">
								<a class="nav-link icon full-screen-link nav-link-bg">
									<i class="fe fe-minimize fullscreen-button"></i>
								</a>
							</div>
							<!-- FULL-SCREEN -->
							<div class="dropdown d-flex notifications">
								<a class="nav-link icon show-notifs" data-bs-toggle="dropdown">
									<i class="fe fe-bell"></i>
									{% if (app.user.notifications | length > 0)  %}
									<span class="pulse-danger notif-view">{{ app.user.notifications | length }}</span>
									{% elseif app.user.notifications | length == 0 %}
									<span class="pulse">{{ app.user.notifications | length }}</span>
									{% endif %}
								</a>
								<div class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
									<div class="drop-heading border-bottom">
										<div class="d-flex">
											<h6 class="mt-1 mb-0 fs-16 fw-semibold text-dark me-auto">
												<span class="text-danger notif-view">{{ app.user.notifications | length }}</span>
												Notifications
											</h6>
											{% if app.user.notifications | length > 0 %}
												<a href="{{ path('notification_delete_all') }}">Tout effacer</a>
											{% endif %}
										</div>
									</div>
									<div class="notifications-menu">
										{% for notification in app.user.notifications | reverse %}
										<div class="d-flex" id="notif-div" style="display:block">
											<a class="dropdown-item d-flex" href="notify-list.html">
												<div class="me-3 notifyimg  bg-secondary brround box-shadow-secondary">
													<i class="fe fe-check-circle"></i>
												</div>
												<div class="mt-1">
													<h5 class="notification-label mb-1">{{ notification.message }}</h5>
													<span class="notification-subtext">{{ notification.createdAt | date('d-m-y H:i') }}</span>
												</div>
											</a>
											<a class="delete-notif"
												href="{{ path('notification_delete', { 'id':notification.id }) }}">
												<i class="fa fa-trash"></i>
											</a>
										</div>

										{# <a href="" class="col-md-2">
											<i class="mt-4 close-notif fa fa-trash"></i>
										</a> #}
										{% endfor %}
									</div>
									<div class="dropdown-divider m-0"></div>
									<div class="d-flex p-2">
										{% if app.user.notifications | length > 0 %}
										<a href="" class="dropdown-item text-center">Voir tout</a>
										{% endif %}
									</div>
								</div>
							</div>
							<!-- NOTIFICATIONS -->
							
							<!-- SIDE-MENU -->
							<div class="dropdown d-flex profile-1">
								{% if app.user.picture is not null %}
								<a href="#" data-bs-toggle="dropdown" class="nav-link leading-none d-flex">
									<img src="{{ asset('uploads/user/' ~ app.user.picture)}}" alt="profile-user"
										class="avatar  profile-user brround cover-image">
								</a>
								{% elseif app.user.sexe == 0 %}
								<a href="#" data-bs-toggle="dropdown" class="nav-link leading-none d-flex">
									<img src="{{ asset('uploads/avatar/avatarMen.png')}}" alt="profile-user"
										class="avatar  profile-user brround cover-image">
								</a>
								{% elseif app.user.sexe == 1 %}
								<a href="#" data-bs-toggle="dropdown" class="nav-link leading-none d-flex">
									<img src="{{ asset('uploads/avatar/avatarWoman.png')}}" alt="profile-user"
										class="avatar  profile-user brround cover-image">
								</a>
								{% endif %}
								<div class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
									<div class="drop-heading">
										<div class="text-center">
											<h5 class="text-dark mb-0 fs-14 fw-semibold">{{app.user.fullname}}</h5>
											<small class="text-muted">{{app.user.role}}</small>
										</div>
									</div>
									<div class="dropdown-divider m-0"></div>
									<a class="dropdown-item" href="{{path('profil_user', {'id': app.user.id} ) }}">
										<i class="dropdown-icon fe fe-user"></i>
										Profil
									</a>
									<a class="dropdown-item" href="{{path('profil')}}">
										<i class="dropdown-icon fe fe-user"></i>
										Modifier mon profil
									</a>
									<a class="dropdown-item" href="{{path('app_logout')}}">
										<i class="dropdown-icon fe fe-alert-circle"></i>
										DÃ©connexion
									</a>
								</div>
								
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
{% block error %}{% endblock %}