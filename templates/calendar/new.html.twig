
<div class="section pt-0">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="field_form">
					
					<div class="row">
						{% for message in app.flashes('contact_success') %}
						<div class="col-md-12 alert alert alert-success alert-dismissible fade show" role="alert">
							{{ message }}
							<button type="button" class="close" data-dismiss="alert" aria-label="close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
						{% endfor %}
						{% for message in app.flashes('contact_error') %}
						<div class="col-md-12 alert alert-danger alert-dismissible fade show" role="alert">
							{{ message }}
							<button type="button" class="close" data-dismiss="alert" aria-label="close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
						{% endfor %}

					

					<label for="title" class="form-label">Title</label>
					<input type="text" name="title" id="title" class="form-control" required>

					<label for="category" class="form-label">Category</label>
					<select type="text" name="category" id="category" class="form-control">
						{% for cat in category %}
								<option>{{cat.name}}</option>
						{% endfor %}
					</select>
					<label for="description">Description</label>
					<input type="text" name="description" id="description" class="form-control" required>

					<label for="teacher" class="form-label">Formateur</label>
					<select type="text" name="teacher" id="teacher" class="form-control" required>
					{% if code == 200 %}
						{% for teacherSelect in calendrier %}
							<option>{{teacherSelect.fullname}}</option>
						{% endfor %}
					{% elseif code == 201 %}
						{% for teacherSelect in teacher %}
							<option>{{teacherSelect.fullname}}</option>
						{% endfor %}
					{% elseif code == 203 %}
						{% for teacherSelect in indisponible %}
							<option>{{teacherSelect.fullname}}</option>
						{% endfor %}
					{% endif %}
					</select>
					<div class="d-flex justify-content-center">
						<button type="submit" class="btn btn-primary mt-3" id="envoyerFormulaire">Ajouter</button>
					</div>
				   <div class="d-flex justify-content-end">
				   		<button type="submit" class="btn btn-success mt-3 align-items-end" id="actualiserListe">Actualiser ma liste d'enseignants</button>
				   </div>

					

					</div>
					
				</div>
			</div>

		</div>
	</div>
</div>


